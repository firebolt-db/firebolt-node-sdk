{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build",
    ".git"
  ],
  "include": [
    "src",
    "test"
  ]
}
